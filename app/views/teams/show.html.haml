%h1
  = @team.name
  = image_tag('team_icon.jpeg', width: 45)
- if current_user.id == @team.leader_id
  = link_to 'Settings', edit_team_path(@team), class:'btn btn-primary gray_button'
%h2
- if current_user.team_id.nil? && !already_invited?(current_user, @team)
  = link_to 'Ask to join team', ask_to_join_team_invitation_path, class:'btn btn-primary gray_button'
- if current_user.team_id == @team.id and current_user.id != @team.leader_id
  = link_to "Leave Team", leave_user_path, class:'btn btn-primary gray_button'

%div
  %h2
    Team Leader
  = render @leader
  - if @members.any?
    %h2
      Members
    = will_paginate @members
    - @members.each do |member|
      %li
        = render member
    = will_paginate @members

  - if current_user.team_id == @team.id
    %h3 Team invitations
    = will_paginate @invitations
    %ol
      = render @invitations
    = will_paginate @invitations


- if current_user.id == @team.leader_id
  = link_to 'Delete Team', @team, method: 'delete', class:'right btn btn-primary gray_button',
                                  data: { confirm: 'Are you sure?' }
