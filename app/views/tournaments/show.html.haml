%h1
  = @tournament.name
%h2
  = @tournament.sport
- if @tournament.organizer_id == current_user.id
  = link_to 'Delete', @tournament, method: 'delete',
                             data: { confirm: 'Are you sure?' }
%br
- if !@tournament.started
  = render 'not_started_tournament'
- else
  = render 'started_tournament'
