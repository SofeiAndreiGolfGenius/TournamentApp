%div
  = message.content
= message.created_at.in_time_zone('Bucharest').hour.to_s + ':' + message.created_at.in_time_zone('Bucharest').min.to_s
- if current_user.id == message.sender_id
  = link_to image_tag('trash_can.jpeg',width: '15px', alt: 'Delete'), message, method: 'delete', data: { confirm: 'Are you sure?' }
